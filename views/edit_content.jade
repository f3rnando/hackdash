.row
  form.span8.offset2.ajaxForm.form-horizontal(action="/admin/content/edit/" + content.id, method="POST")
    div
      h3 Edit content

    div
      
      .control-group
       .controls
        input(type="text", class="input-xlarge", placeholder="Title", name="title", value=content.title)

      .control-group
       .controls
        textarea(class="input-xlarge", id="description", name="description", rows="4", maxlength="400", placeholder="Description") #{content.description}

      .control-group
        .controls
          #dragdrop 
            p Drag Photo Here
            input(class="input-xlarge",type="file", name="cover_fall", id="cover_fall")        

      .control-group
       .controls
        input(class="input-xlarge", type="text", name="link", id="link", placeholder="Link", value=content.link)

      .control-group
       .controls
        input(class="input-xlarge", type="text", name="tags", id="tags", placeholder="Tags", value=content.tags.join(','))
      
    .modal-footer.span6

      a.cancel.btn.btn-cancel(data-dismiss="modal") Cancel
      button.btn.btn-custom(type="submit") Save changes

