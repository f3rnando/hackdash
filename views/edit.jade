.row
  .span4.span-center
    h3 Edit project

    form.ajaxForm(action="/api/projects/edit/" + project.id, method="POST")

      
      .control-group
       .controls
        input(type="text", class="input-xlarge", placeholder="Title", name="title", value=project.title)

      .control-group
       .controls
        textarea(class="input-xlarge", id="description", name="description", rows="4", maxlength="400", placeholder="Description") #{project.description}

      .control-group
        .controls
          #dragdrop 
            p Drag Photo Here
            input(class="input-xlarge",type="file", name="cover_fall", id="cover_fall")        

      .control-group
       .controls
        input(class="input-xlarge", type="text", name="link", id="link", placeholder="Link", value=project.link)

      .control-group
       .controls
        input(class="input-xlarge", type="text", name="tags", id="tags", placeholder="Tags", value=project.tags.join(','))

      .control-group
       .controls
        input(class="input-xlarge", type="text", name="gallery", id="gallery", placeholder="Imgur gallery", value=project.gallery)

      .control-group
       .controls
        input(class="input-xlarge", type="text", name="video", id="video", placeholder="Video", value=project.video)
      
