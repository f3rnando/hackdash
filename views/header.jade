          if(user)
            a.btn-small.btn-profile.pull-right(href="/users/profile")
            img.avatar(style="margin:10px", width=32, src=user.picture + '?s=50').tooltips(rel='tooltip', data-placement='bottom', data-original-title='Edit profile')
            if (user.is_admin)
              a.btn.btn-small.pull-right(href="/admin") Admin
              
          form(style="margin:10px").formSearch.pull-right
            i.icon.icon-large.icon-search
            input.search-query.input-large#searchInput(type='text')
    
