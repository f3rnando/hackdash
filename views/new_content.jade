      form.ajaxFormContent(action="/admin/content/create", method="POST")
        .form-content
          
          .control-group
            .controls
              input(type="text", class="input-block-level", placeholder="Title", name="title")

          .control-group
            .controls
              textarea(class="input-block-level", id="abstract", name="abstract", rows="4", maxlength="128", placeholder="Abstract")

          .control-group
            .controls
              textarea(class="input-block-level", id="description", name="description", rows="4", maxlength="400", placeholder="Description")

          .control-group
            .controls
              #dragdrop 
                p Drag Photo Here
                input(type="file", name="cover_fall", id="cover_fall")        

          .control-group
            .controls
              input(class="input-block-level", type="text", name="link", id="link", placeholder="Link")

          .control-group
            .controls
              input(class="input-block-level", type="text", name="tags", id="tags", placeholder="Tags")

        .form-actions

          input.btn.primary.btn-success.pull-left(type="submit", value="Crear contenido")
          a.cancel.btn.btn-cancel.pull-right(data-dismiss="modal") Cancelar
